<p><%= button_to "Discover Top Rated Movies", top_movies_path, method: :post, params: {:user_id => @user.id} %> </p>

<%= form_with url: search_path, local: true do |form| %>
  <%= form.label :search, 'Search for Movies:' %>
  <%= form.text_field :search %>
  <%= form.submit 'Search' %>
  <%= form.hidden_field :user_id, :value => @user.id %>
<% end %>