<h1> Viewing Party Lite </h1>

<% if current_user %>
  <%= link_to "Log out", '/logout', method: :delete %>
<% else %>
  <%= link_to "Create a New User", "/register", class: "create-user-link"%>

  <br><br>

  <%= link_to "Log In", login_path, class: "login-link"%>
<% end %>

<br><br>

<div id="existing-users">
  <% @users.each do |user|%>
    <div id="user-<%=user.id%>">
      <%= link_to "#{user.email}'s Dashboard", user_path(user.id), class: "user-dashboard-link"%>
    </div>
  <% end %>
</div>